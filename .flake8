[flake8]
# Flake8 configuration for telegram-training-bot

# Maximum line length (matching black config)
max-line-length = 120

# Extend default ignore list
# E203: whitespace before ':'
# E266: too many leading '#' for block comment
# E501: line too long (handled by black)
# W503: line break before binary operator
# W504: line break after binary operator
# F401: imported but unused (handled by isort)
# F403: unable to detect undefined names
extend-ignore = E203,E266,E501,W503,W504,F401,F403

# Maximum cyclomatic complexity
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    alembic,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    dist,
    build,
    *.egg-info

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811,D100,D101,D102,D103
    conftest.py:F401,F403,E501

# Docstring conventions
docstring-convention = google

# Show source code for errors
show-source = true

# Show statistics
statistics = true

# Count errors
count = true
