# ========== TELEGRAM BOT ==========
# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую, без пробелов)
ADMIN_IDS=123456789,987654321

# ========== ADMIN PANEL ==========
# Пароль для входа в админ-панель
# ВАЖНО: Используйте сложный пароль!
ADMIN_PASSWORD=your_secure_admin_password_here

# ========== DATABASE ==========
# Настройки базы данных

# Для SQLite (по умолчанию):
DB_NAME=training_bot

# Для PostgreSQL (раскомментируйте и настройте):
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_NAME=training_bot

# ========== LOGGING ==========
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========== NOTES ==========
# 1. Скопируйте этот файл в .env и заполните своими значениями
# 2. Никогда не коммитьте .env файл в git!
# 3. Используйте сложные пароли для безопасности
# 4. Для production рекомендуется PostgreSQL вместо SQLite
